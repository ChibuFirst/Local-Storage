<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    <style name="Widget.LocalStorage.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>

    </style>

    <style name="Widget.LocalStorage.TextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="android:tint">@color/blue</item>
    </style>
</resources>